<vbox width="100%" height="100%" style="spacing:15px;">
    <grid width="100%">
        <label text="Image:" verticalAlign="center" />
        <textfield id="imageUrlField" width="100%" text="https://upload.wikimedia.org/wikipedia/commons/thumb/f/f0/Valve_original_%281%29.PNG/300px-Valve_original_%281%29.PNG" />

        <spacer />
        <box width="100%">
            <button id="loadButton" text="Load" horizontalAlign="right" />
        </box>
    </grid>
    <rule />
    <hbox width="100%" height="100%">
        <scrollview width="100%" height="100%">
            <image id="imagePreview" />
        </scrollview>
        <vbox width="300" height="100%">
            <scrollview width="100%" contentWidth="100%" height="100%" styleName="collapsible-view">
                <vbox id="filtersContainer" width="100%" styleName="collapsible-container">
                </vbox>
            </scrollview>
            <button text="New Filter" width="100%" id="newFilter" />
        </vbox>
    </hbox>
</vbox>